<li class="box-item add-item add-categorie hidden-phone hidden-tablet" href="#AddCategoryHeader" data-toggle="modal">
  <div class="add_border">
    <%= link_to new_category_path do %>
    <div class="container-img">
        <div class="img-box">
          <i class="icon-plus"></i>
        </div>
    </div>
    <!-- Info -->
    <div class="info">
      <!-- Title -->
      <div class="name">
        <%=t('categories.actions.add')%>  
      </div>
      <!-- Autor -->
      <div class="author"> 
        <span class="by"></span>  
      </div>
      <!--____________________ -->
      <div class="info-bottom">
        <hr class="soften">
      </div>
    </div>
    <% end %>
  </div>
</li>