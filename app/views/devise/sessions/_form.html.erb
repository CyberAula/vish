<section id="sign_in">
  <h4><%= t('sign_in') %></h4>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! if controller.controller_name == 'sessions' %>

    <article class="form-group login_data">

      <%= f.label :email %>

      <%= f.email_field :email, :class => "form-control" %>

      <%= f.label :password %>

      <%= f.password_field :password, :class => "form-control" %>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <input type="checkbox"> 
            <span class="lbl padding-0">
              <%=t("activerecord.attributes.user.remember_me")%>
            </span>
          </label>
        </div>
      <% end %>

      <%= f.submit t('sign_in'), :class =>"btn" %>
      


      <%= link_to t('devise.links.forgot_password'), new_password_path(resource_name),  :class=> "forgot-link remember_password" %>

      <hr class="soften">

      <%= render :partial => "devise/shared/links" %>  

    </article>
  <% end %>
</section>
