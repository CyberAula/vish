<li class="event event-item" <%if defined?(obj_id)%>edit-id="<%=obj_id%>"<%end%>>
  <!-- corner -->
  <%= link_to(event) do %>
    <div class="corner-item">
      <div class="corner-item2">
        <div class="corner-color"></div>
        <i class='icon-facetime-video'></i>
      </div>
      <div class="corner-background"></div>
    </div>
    <div class="container-img">
      <div class="dummy"></div>
      <div class="element resource-center">
        <div class="img-box resource-center" id="event-<%=event.id%>" bs-img="<%=event_raw_thumbail(event)%>" >
          <div class="event">
            <i class='fa fa-video-camera'></i>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <script>
  $("#event-<%=event.id%>").backstretch("<%=event_raw_thumbail(event)%>");  
  </script>    
<!--INFO excursuion-->
  <div class="caption">
<!--Title -->
    <h6>
      <%= link_to event.title, event %>
    </h6>
<!--Autor -->
    <div class="author"> 
      <span class="by"><%=t('by')%></span>
      <%= link_to event.author.name, event.author.subject %>
    </div>
    <hr>
    <div class="info-bottom">  
      <!--like -->
      <div class="like">  
        <% if event.post_activity%>
        <div class="count"><%=event.post_activity.likes.count.to_s%></div>
        <%= link_like(event.post_activity, :title =>t('excursion.actions.favorite'))%>
        <%else%>
        <div class="count">0</div>
        <%end%>
      </div>
      <!--views -->
      <div class="views">
        <%=event.visit_count.to_s%>
        <i class="fa fa-eye"></i>
        <%#=t('follow.views')%>
      </div>
    </div>
  </div>
</li>
