<section class="quick-search">

  <div class="search-nav">
    <%= form_tag search_path, method: 'get', class: "navbar-search " do %>
      <%= text_field_tag :q, nil, autocomplete: :off, id: "qmobile", class: 'search-query', placeholder: t('search.name'), "data-min_query" => SocialStream::Search::MIN_QUERY %>
      <button type="button" id="search_button_mobile" class="search_button_class"><i class="icon-search icon-border mini-search"></i></button>
    <% end %>
  </div>
  
  <%= content_for :javascript do %>
      SocialStream.SearchHeader.show();
      $("#search_button_mobile").on("click", function(){
        document.location= "/search?q=" + $("#qmobile").val();
      });
  <% end %>

</section>