if ($(".verb_like.like_<%= dom_id(@like.object) %>").length <1) {
  $(".like_<%= dom_id(@like.object) %>").html("<%= escape_javascript(render partial: 'activities/like', locals: { activity: @like.object }) %>");
} else {
  $(".verb_like.like_<%= dom_id(@like.object) %>").data('method', 'post');
  $(".verb_like.like_<%= dom_id(@like.object) %> .fa-star").removeClass("fa-star").addClass("fa-star-o");
  var n = parseInt($(".verb_like.like_<%= dom_id(@like.object) %>").closest(".like").children(".count").html()) - 1;
  $(".verb_like.like_<%= dom_id(@like.object) %>").closest(".like").children(".count").html(n + "");
}