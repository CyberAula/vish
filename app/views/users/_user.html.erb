<li class="box-item contact" id="<%= dom_id user %>">
  
  <%if user.is_mve %>
    <div class="badge-teacher-active"></div>
  <%end%>
  
  <div class="container-img">
      <div class="dummy"></div>
      <div class="element">
      <div class="avatar">
        <%= link_to(image_tag(user.logo.url(:medium)), user.subject) %>
      </div>
      </div>
  </div>

  <div class="info">
    <!--Title -->
    <div class="name">
      <%= link_to(truncate_name(user.name), user.subject)%>
    </div>

    <div class="add">
      <%= contact_button(user) %>
    </div>

    <div class="info-bottom">
      <hr class="soften">
    </div>
  </div>
  
</li>










